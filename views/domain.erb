<h1><%= @domain.name %></h1>

<style type="text/css">

</style>

<table class="table table-striped">
	<thead>
		<tr>
			<th>at</th>
			<th>nameserver</th>
			<th>resolves_to</th>
			<th>queried</th>
			<th>current</th>
			<th>lagging</th>
		</tr>
	</thead>
	<tbody>
<% @snapshots.each do |s| %>
		<tr class="<%= s.ok? ? 'ok' : '' %>">
			<td><%= s.at %></td>
			<td><%= s.primary_nameserver %></td>
			<td><%= s.resolves_to %></td>
			<td><%= s.count_queried %></td>
			<td><%= s.count_current %></td>
			<td><%= s.count_lagging %></td>
			<td><span class="btn btn-<%= s.ok? ? 'success' : 'warning' %>"><%= s.ok? ? 'OK' : 'Warning' %></span></td>
		</tr>
<% end %>
	</tbody>
</table>

